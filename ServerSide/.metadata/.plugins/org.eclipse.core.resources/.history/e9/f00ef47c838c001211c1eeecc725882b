package com.louishong.database;

import java.sql.ResultSet;
import java.sql.SQLException;

public class ProfileWrapper {
	public static String sDriver = "org.sqlite.JDBC";
	public static String sUrl = "jdbc:sqlite:/Users/honglouis/Documents/ServerWorkspace/Gravifile/src/com/louishong/database/Profiles.sqlite";
	public static SQliteBase sqlBase = new SQliteBase(sDriver, sUrl);

	static String searchByName(String name) {
		ResultSet results = sqlBase.executeQuery("SELECT * FROM Profiles");

		String resultName;
		String resultLastName;
		String resultUserPoint;
		String resultEmail;
		String resultGender;
		String resultIsMember;
		
		try {

			while (results.next()) {
				resultName = results.getString("FirstName");
				if (resultName.equals(name)) {
					resultLastName = results.getString("LastName");
					resultUserPoint = results.getString("UserPoint");
					resultEmail = results.getString("Email");
					resultGender = results.getString("Gender");
					resultIsMember = results.getString("IsMember");
					
				}
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return null;
	}

}
