package com.louishong.database;

import java.sql.ResultSet;
import java.sql.SQLException;

public class ProfileWrapper {
	public static String sDriver = "org.sqlite.JDBC";
	public static String sUrl = "jdbc:sqlite:/Users/honglouis/Documents/ServerWorkspace/Gravifile/src/com/louishong/database/Profiles.sqlite";
	public static SQliteBase sqlBase = new SQliteBase(sDriver, sUrl);

	static String searchByName(String name) {
		ResultSet results = sqlBase.executeQuery("SELECT * FROM Profiles");

		try {

			while (results.next()) {
				String resultName = results.getString("FirstName");
				if (resultName.equals(name)) {
					String resultLastName = results.getString("LastName");
					String resultUserPoint = results.getString("UserPoint");
					String resultEmail = results.getString("Email");
					String resultGender = results.getString("Gender");
					String resultIsMember = results.getString("IsMember");
				}
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return null;
	}

}
